# Environment configuration template
# Copy this file to .env and fill in your Snowflake credentials

# Snowflake Connection Settings
SNOWFLAKE_ACCOUNT=your_account.region.cloud
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
# Alternative: use private key authentication
# SNOWFLAKE_PRIVATE_KEY_PATH=/path/to/private_key.pem

# Snowflake Resources (Environment-specific)
SNOWFLAKE_ROLE=ML_DEV_ROLE
SNOWFLAKE_WAREHOUSE=DEV_WH
SNOWFLAKE_DATABASE=ML_DEV_DATABASE
SNOWFLAKE_SCHEMA=PUBLIC

# Application Settings
ENVIRONMENT=dev
LOG_LEVEL=INFO
DEBUG=false

# MLflow Settings (optional)
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=snowflake_ml_experiments

# Model Registry Settings
MODEL_REGISTRY_DATABASE=ML_DEV_MODELS
MODEL_REGISTRY_SCHEMA=REGISTRY

# Data Pipeline Settings
RAW_DATA_DATABASE=RAW_DEV_DATA
PROCESSED_DATA_DATABASE=PROCESSED_DEV_DATA

# Feature Store Settings
FEATURE_STORE_DATABASE=FEATURE_STORE_DEV
FEATURE_STORE_SCHEMA=FEATURES

# Security Settings
ENCRYPTION_KEY=your_encryption_key_here
SECRET_KEY=your_secret_key_here

# Monitoring & Alerting
ENABLE_MONITORING=true
ALERT_EMAIL=ml-team@yourorg.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Performance Settings
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT=300
MAX_RETRY_ATTEMPTS=3
